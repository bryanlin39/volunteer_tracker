<div id='volunteers'>
  <h1>Volunteers</h1>

  <div class='row'>
    <div class='col-md-6'>
      <h2>List of all Registered Volunteers</h2>
      <ul>
        <% @volunteers.each() do |volunteer| %>
        <li><a href='/volunteers/<%= volunteer.id() %>'><%= volunteer.name() %></a></li>
        <% end %>
      </ul>
    </div>

    <div class='col-md-6'>
      <h2>Add a New Volunteer</h2>
      <form action='/volunteers/new' method='post'>
        <label for='name'>Volunteer name:</label>
        <input name='name' type='text'>
        <button type='submit' class='btn btn-outline-success'>Add Volunteer</button>
      </form>
    </div>
  </div>
</div>
