<div id='project'>
  <h1><%= @project.description() %></h1>

  <div class='row'>
    <div class='col-md-8'>
      <h2>Volunteers Assigned to this Project:</h2>
      <ul>
        <% @project.volunteers().each() do |volunteer| %>
        <li><a href='/volunteers/<%= volunteer.id() %>'><%= volunteer.name %></a></li>
        <% end %>
      </ul>

      <hr>

      <h3>Add a New Volunteer:</h3>
      <form action='/projects/new_volunteer' method='post'>
        <input type='hidden' name='project_id' value='<%= @project.id() %>'>
        <label for='name'>Volunteer name:</label>
        <input name='name' type='text'>
        <button type='submit' class='btn btn-outline-success'>Add Volunteer</button>
      </form>
    </div>

    <div class='col-md-4'>
      <h3>Update Project:</h3>
      <form action='/projects/<%= @project.id() %>/edit' method='post'>
        <input name='_method' type='hidden' value='patch'>

        <label for='description'>Change the description:</label>
        <input name='description' type='text'>
        <button type='submit' class='btn btn-outline-primary'>Submit</button>
      </form>

      <h3>Delete Project:</h3>
      <p>If the project has been completed, please remove it from the database.</p>
      <form action='/projects/<%= @project.id() %>/delete' method='post'>
        <input name='_method' type='hidden' value='delete'>
        <button type='submit' class='btn btn-outline-danger'>Delete</button>
      </form>

    </div>
  </div>

  <div class='container go_home'>
    <a href='/'>Back to Homepage</a>
  </div>
</div>
