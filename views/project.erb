<div id='project'>
  <h1><%= @project.description() %></h1>

  <div class='row'>
    <div class='col-md-6'>
      <h2>Volunteers Registered for this Project:</h2>
      <ul>
        <% @project.volunteers().each() do |volunteer| %>
        <li><%= volunteer.name %></li>
        <% end %>
      </ul>
    </div>

    <div class='col-md-6'>
      <h2>Add a New Volunteer</h2>
      <form action='/projects/new_volunteer' method='post'>
        <input type='hidden' name='project_id' value='<%= @project.id() %>'>
        <label for='name'>Volunteer name:</label>
        <input name='name' type='text'>
        <button type='submit' class='btn btn-outline-success'>Add Volunteer</button>
      </form>
    </div>
  </div>
</div>
